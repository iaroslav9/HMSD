<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_extra_small_margin"
    android:layout_marginEnd="@dimen/default_small_margin"
    android:layout_marginStart="@dimen/default_small_margin"
    android:layout_marginTop="@dimen/default_extra_small_margin"
    android:elevation="4dp"
    card_view:cardCornerRadius="4dp"
    tools:ignore="contentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_small_margin">

        <TextView
            android:id="@+id/launchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin"
            android:textColor="@color/default_black"
            android:textSize="@dimen/app_text_size_large"
            tools:text="launchName" />

        <TextView
            android:id="@+id/launchWindowStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/launchName"
            android:layout_below="@+id/launchName"
            android:layout_marginTop="@dimen/default_small_margin"
            tools:text="windowStart" />

        <TextView
            android:id="@+id/launchWindowEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/launchWindowStart"
            android:layout_below="@+id/launchWindowStart"
            tools:text="windowEnd" />

        <TextView
            android:id="@+id/launchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/favorite"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_toStartOf="@+id/favorite"
            android:textSize="@dimen/app_text_size_medium"
            tools:text="Status" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="@dimen/launch_favorite_size"
            android:layout_height="@dimen/launch_favorite_size"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/launchWindowStart"
            android:src="@drawable/ic_favorite_border" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
