<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rocketImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rocket_top_image_width"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/rocketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin" />

        <TextView
            android:id="@+id/rocketConfiguration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin" />

        <TextView
            android:id="@+id/rocketFamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator"
            android:layout_margin="@dimen/default_small_margin"
            android:background="@color/default_grey" />

        <TextView
            android:id="@+id/locationCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator"
            android:layout_margin="@dimen/default_small_margin"
            android:background="@color/default_grey" />

        <TextView
            android:id="@+id/missionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin" />

    </LinearLayout>

</ScrollView>